{
  "compilerOptions": {
    "module": "NodeNext",
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "baseUrl": ".",
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "target": "es2017",
    "paths": {
      "@types/*": ["./src/types/*"]
    }
  },
  "compileOnSave": true,
  "include": ["src"],
  "exclude": ["**/node_modules/*", "**/dist/*", "**/local/*"]
}
