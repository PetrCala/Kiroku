{
  "functions": {
    "source": "apps/api",
    "ignore": [
      "node_modules",
      ".git",
      "firebase-debug.log",
      "**/*.test.*",
      "**/__tests__/**"
    ],
    "runtime": "nodejs20"
  },
  "database": {
    "rules": "database.rules.json"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "emulators": {
    "singleProjectMode": false,
    "functions": {
      "port": 5001
    },
    "auth": {
      "port": 9099
    },
    "ui": {
      "enabled": true,
      "port": 4000
    },
    "database": {
      "port": 9001
    },
    "storage": {
      "port": 9199
    }
  }
}
